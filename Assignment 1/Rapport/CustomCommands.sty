\newcommand{\quickwordcount}[1]{%
  % Run texcount and write output to file
  \immediate\write18{texcount -0 -sum -merge -inc #1.tex > #1-words.sum}%
  % Open the file and read
  \newread\tmpfile
  \openin\tmpfile=#1-words.sum
  \read\tmpfile to \thewordraw
  \closein\tmpfile
  % Remove spaces/newlines
  \edef\theword{\expandafter\stripspaces\thewordraw}%
}

\newcommand{\quickcharcount}[1]{%
  % Run texcount and write output to file
  \immediate\write18{texcount -0 -sum -merge -char -inc #1.tex > #1-chars.sum}%
  % Open the file and read
  \newread\tmpfile
  \openin\tmpfile=#1-chars.sum
  \read\tmpfile to \thecharraw
  \closein\tmpfile
  % Remove spaces/newlines
  \edef\thechar{\expandafter\stripspaces\thecharraw}%
}

% Helper macro to remove spaces
\newcommand{\stripspaces}[1]{%
  \romannumeral-`0\expandafter\strip@spaces#1 \relax
}
\def\strip@spaces#1 #2\relax{%
  #1\ifx\\#2\\\else\strip@spaces#2\relax\fi%
}

\newcommand{\wordTotal}[1]{\numexpr \quickcharcount{#1} + \quickwordcount{#1}} \relax

